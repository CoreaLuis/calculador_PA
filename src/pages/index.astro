---
import styles from ".styles.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
			crossorigin="anonymous"
		/>
		<link
			rel="shortcut icon"
			href="https://virtualbanking.lafise.com/api/image?_file=image&_id=5f873d4f1d8cf738e1d36b81"
			type="image/x-icon"
		/>
		<title>calculadora</title>
	</head>
	<body>
		<div class="container">
			<div class="row mt-5">
				<h2 class="text-center">
					Nuestra calculadora le ayudará a calcular la cuota de su
					préstamo para compra de vehículo
				</h2>
				<!-- Sección Izquierda -->
				<div class="col-lg-6 card">
					<div class="row mt-5">
						<h4 class="text-start">Información Personal</h4>
						<div class="col-md-6">
							<div class="input-group mb-3">
								<span class="input-group-text"
									>Fecha de Nacimiento</span
								>
								<input
									type="date"
									class="form-control"
									aria-label="Fecha de Nacimiento"
								/>
							</div>
						</div>
						<h4 class="text-start">Información Crédito</h4>
						<div class="col-md-6">
							<div class="input-group mb-3">
								<span class="input-group-text">$</span>
								<input
									type="text"
									class="form-control"
									aria-label="Amount (to the nearest dollar)"
								/>
							</div>
						</div>
					</div>

					<div class="row mt-3">
						<div class="col-md-12">
							<div class="dropdown">
								<button
									id="dropdownMenuButton"
									class="btn btn-secondary dropdown-toggle btn-custom"
									type="button"
									data-bs-toggle="dropdown"
									aria-expanded="false"
								>
									Tipo De Préstamo
								</button>
								<ul class="dropdown-menu">
									<li>
										<button
											class="dropdown-item"
											type="button"
											data-value="Nuevo"
										>
											Vehículo Nuevo
										</button>
									</li>
									<li>
										<button
											class="dropdown-item"
											type="button"
											data-value="Usado"
										>
											Vehículo Usado
										</button>
									</li>
								</ul>
							</div>
						</div>
					</div>

					<div class="row mt-3">
						<div class="col-md-12">
							<div class="dropdown">
								<button
									id="dropdownMenuButton2"
									class="btn btn-secondary dropdown-toggle btn-custom"
									type="button"
									data-bs-toggle="dropdown"
									aria-expanded="false"
								>
									Tipo De Vehículo
								</button>
								<ul class="dropdown-menu">
									<li>
										<button
											class="dropdown-item"
											type="button"
											data-value="Automovil"
										>
											Automóvil
										</button>
									</li>
									<li>
										<button
											class="dropdown-item"
											type="button"
											data-value="Motocicleta"
										>
											Motocicleta
										</button>
									</li>
									<li>
										<button
											class="dropdown-item"
											type="button"
											data-value="Camioneta"
										>
											Camioneta
										</button>
									</li>
									<li>
										<button
											class="dropdown-item"
											type="button"
											data-value="Camion"
										>
											Camión
										</button>
									</li>
								</ul>
							</div>
						</div>
					</div>
					<!-- Botón "Calcular" -->
					<div class="row mt-3">
						<div class="col-md-12">
							<button
								type="button"
								class="btn btn-outline-success btn-block btn-square"
							>
								Calcular
							</button>
						</div>
					</div>
				</div>
				<!-- Sección Derecha -->
				<div class="col-lg-6 card">
					<!-- Contenido opcional en la sección derecha -->
					<h2>Respuesta</h2>
					<!-- Botón "Calcular" -->
					<div class="row mt-3">
						<div class="col-md-12">
							<a
								href="https://www.lafise.com/blp"
								class="btn btn-outline-success btn-block btn-square"
							>
								Solicitar
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
